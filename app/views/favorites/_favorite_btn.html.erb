<% if post.favorited_by?(current_user) %>
  <p>
    <%= link_to post_favorites_path(post),method: :delete, remote: true ,class: 'text-danger text-decoration-none' do %>
    <i class="fas fa-heart"></i><%= post.favorites.count %>
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to post_favorites_path(post),method: :post, remote: true ,class: 'text-danger text-decoration-none' do %>
    <i class="fas fa-heart"></i><%= post.favorites.count %>
    <% end %>
  </p>
<% end %>
