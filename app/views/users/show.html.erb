<div class="container p-5">
    <div class="row-12 user_index border mt-5 mb-5 shadow-lg">
      <div class="col-7 d-inline-block mt-3">
        <%= render 'users/show' , user: @user_post %>
      </div>
      <div class="col-4 px-auto d-inline-block mb-5 mt-0">
        <%= render 'relationships/follow_number' , user: @user_post %>
        <% if @user_post == current_user %>
          <div class='d-inline-block mt-4 mr-3'>
            <%= link_to edit_user_path , class: 'btn btn-sm btn-success' do %>
              <i class="fas fa-user-pen"></i>プロフィールを編集
            <% end %>
          </div>
        <% end %>
        <div class='d-inline-block mt-4'>
          <%= link_to favorites_user_path , class: 'btn btn-sm btn-warning' do %>
            <i class="fas fa-heart-circle-check"></i>いいね一覧
          <% end %>
        </div>
      </div>
    </div>
    <% if @post.count == 0 %>
      <div class="row-12 h1 text-center mt-5">
        投稿がありません。
      </div>
    <% else %>
      <% @post.each do |post| %>
        <div class="row post_index border m-5 shadow-lg">
          <%= render 'posts/index' , post: post %>
        </div>
      <% end %>
    <% end %>
    <div class="paginate d-flex justify-content-center">
      <%= paginate @post %>
    </div>
</div>