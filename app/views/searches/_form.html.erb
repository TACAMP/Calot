<%= form_with url: search_path ,method: :get , local: true do |f| %>
  <%= f.select :range , options_for_select([["投稿","Post"],["タグ","Tag"],["ユーザー","User"]])%>
  <%= f.select :search , options_for_select([["部分一致","partial_match"],["完全一致","perfect_match"]]) %>
  <%= f.text_field :word %>
  <%= f.submit '検索' %>
<% end %>